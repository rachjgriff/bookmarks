<ul>
  <% @bookmarks.each do |bookmark| %>
    <li class="bookmark" id="bookmark-<%= bookmark.id %>">
      <a href="<%= bookmark.url %>" target="_blank">
        <%= bookmark.title %>
      </a>
      <form action="/bookmarks/<%= bookmark.id %>" method="post">
        <input type="hidden" name="_method" value="DELETE"/>
        <input type="submit" value="Delete Bookmark" />
      </form>
      <form action="/bookmarks/<%= bookmark.id %>" method='get'>
        <input type="submit" value="Update">
      </form>
      <form action="/bookmarks/comment/<%= bookmark.id %>" method='get'>
        <input type="submit" value="Comment">
      </form>
      <ul>
        <% bookmark.comments.each do |comment| %>
          <li><%= comment.text %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
<br><br>
<form action='/bookmarks/new' method='get'>
  <input type="submit" value="Add Bookmark"/>
</form>
